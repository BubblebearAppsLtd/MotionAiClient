<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="uk.co.bubblebearapps.motionaiclient.conversation.ConversationDisplayFragment">

    <data>

        <variable
            name="item"
            type="uk.co.bubblebearapps.motionaiclient.conversation.model.BotResponseMessageModel" />

        <variable
            name="actionHandler"
            type="uk.co.bubblebearapps.motionaiclient.conversation.ConversationContract.ListItemActionHandler" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_marginEnd="@dimen/chat_bubble_side_margin_large"
        android:layout_marginLeft="@dimen/chat_bubble_side_margin_small"
        android:layout_marginRight="@dimen/chat_bubble_side_margin_large"
        android:layout_marginStart="@dimen/chat_bubble_side_margin_small">

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher" />


        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:theme="@style/ColoredBackground"
            app:backgroundTint="?android:attr/windowBackground"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:background="@drawable/bg_chat_whole"
            android:orientation="vertical"
            app:htmlText="@{item.target}"
            tools:text="@string/lorem" />

    </LinearLayout>


</layout>