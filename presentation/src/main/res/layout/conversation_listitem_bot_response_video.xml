<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="uk.co.bubblebearapps.motionaiclient.conversation.ConversationDisplayFragment">

    <data>

        <variable
            name="item"
            type="uk.co.bubblebearapps.motionaiclient.conversation.model.BotResponseMessageModel" />

        <variable
            name="actionHandler"
            type="uk.co.bubblebearapps.motionaiclient.conversation.ConversationContract.ListItemActionHandler" />

    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/chat_bubble_side_margin_small"
        android:layout_marginLeft="@dimen/chat_bubble_side_margin_small"
        android:layout_marginRight="@dimen/chat_bubble_side_margin_small"
        android:layout_marginStart="@dimen/chat_bubble_side_margin_small">

        <VideoView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="H,16:9"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:videoUrl="@{item.target}" />

    </android.support.constraint.ConstraintLayout>


</layout>